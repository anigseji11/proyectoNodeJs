<h1>Lista de Productos</h1>

<div>
    <table class=" table table-primary">

        <tr>
            <th scope="col">ID</th>
            <th scope="col">title</th>
            <th scope="col">description</th>
            <th scope="col">price</th>
            <th scope="col">code</th>
            <th scope="col">stock</th>
            <th scope="col">status</th>
            <th scope="col">category</th>
        </tr>


        {{#each products}}

          
       
        <tr>
            <td scope="row">{{this.id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.price}}</td>
            <td>{{this.code}}</td>
            <td>{{this.stock}}</td>
            <td>{{this.status}}</td>
            <td>{{this.category}}</td>
        </tr>



        {{/each }}

</div>





<div class="container-fluid">
    <nav aria-label="...">
        <ul class="pagination justify-content-center">

            {{#if response.hasPrevPage}}
            <li class="page-item">
                <a class="page-link" href="{{response.prevLink}}" tabindex="-1">Previous</a>
            </li>
            {{else}}
            <li class="page-item  disabled">
                <a class="page-link" href="{{response.prevLink}}" tabindex="-1">Previous</a>
            </li>
            {{/if}}

            {{#if response.prevPage}}
            <li class="page-item"><a class="page-link" href="{{response.prevLink}}">{{response.prevPage}}</a>
            </li>
            {{/if}}


            <li class="page-item active">
                <a class="page-link" href="{{this.response.prevLink}}">{{response.page}}</span></a>
            </li>


            {{#if response.nextPage}}
            <li class="page-item"><a class="page-link" href="{{response.nextLink}}">{{response.nextPage}}</a>
            </li>
            {{/if}}


            {{#if response.hasNextPage}}
            <li class="page-item">
                <a class="page-link" href="{{this.response.nextLink}}">Next</a>
            </li>
            {{else}}
            <li class="page-item disabled">
                <a class="page-link" href="{{this.response.nextLink}}">Next</a>
            </li>
            {{/if}}

        </ul>
    </nav>

</div>